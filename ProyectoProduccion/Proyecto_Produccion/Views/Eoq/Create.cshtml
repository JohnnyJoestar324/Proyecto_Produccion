@model Proyecto_Produccion.Models.Eoq

@{
    ViewData["Title"] = "Create";
}

<h1>Calcular EOQ</h1>

<h4>EOQ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
            <div class="form-group">
                <label asp-for="Demanda" class="control-label"></label>
                <input type="number" asp-for="Demanda" class="form-control" min="0" />
                <span asp-validation-for="Demanda" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CostoPedido" class="control-label"></label>
                <input type="number" asp-for="CostoPedido" class="form-control" min="0" />
                <span asp-validation-for="CostoPedido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CostoMantenimiento" class="control-label"></label>
                <input type="number" asp-for="CostoMantenimiento" class="form-control" min="0" />
                <span asp-validation-for="CostoMantenimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="PeriodoSeleccionado">Periodo:</label>
                <select asp-for="PeriodoSeleccionado" class="form-control">
                    <option value="365">Año</option>
                    <option value="12">Mes</option>
                    <option value="52">Semana</option>
                </select>
            </div>

            <!-- Mostrar u ocultar campo de Resultado basado en la lógica -->
            @if (ViewData["EOQ"] != null)
            {
                <div class="form-group">
                    <label asp-for="Resultado" class="control-label"></label>
                    <input asp-for="Resultado" class="form-control" readonly />
                    <span asp-validation-for="Resultado" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
